{
    "getAll": {
        "description": "Gets all entries from 'trainers'",
        "route": "/trainers",
        "method": "GET",
        "sql": "SELECT * FROM trainers",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ]
    },
    "getById": {
        "description": "Gets an entry from 'trainers' by its primary key",
        "route": "/trainers/$trainer_id",
        "method": "GET",
        "sql": "SELECT * FROM trainers WHERE trainer_id = $trainer_id",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ]
    },
    "create": {
        "description": "Creates a new entry in 'trainers'",
        "route": "/trainers",
        "method": "POST",
        "sql": "INSERT INTO trainers (trainer_id, experience, speciality) VALUES ($trainer_id, $experience, $speciality)",
        "request_body_params": [
            "trainer_id",
            "experience",
            "speciality"
        ],
        "auth_required": true,
        "allowed_roles": [
            "*"
        ]
    },
    "update": {
        "description": "Updates an existing entry in 'trainers' by its primary key",
        "route": "/trainers/$trainer_id",
        "method": "PUT",
        "sql": "UPDATE trainers SET trainer_id = $trainer_id, experience = $experience, speciality = $speciality WHERE trainer_id = $trainer_id",
        "request_body_params": [
            "trainer_id",
            "experience",
            "speciality"
        ],
        "auth_required": true,
        "allowed_roles": [
            "*"
        ]
    },
    "delete": {
        "description": "Deletes an existing entry in 'trainers' by its primary key",
        "route": "/trainers/$trainer_id",
        "method": "DELETE",
        "sql": "DELETE FROM trainers WHERE trainer_id = $trainer_id",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ]
    }
}